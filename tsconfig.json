{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@app/dark-mode-button": ["src/shared/components/dark-mode-button/src"],
      "@app/default-button": ["src/shared/components/default-button/src"],
      "@app/page-component:": ["src/shared/components/page-component/src"],
      "@app/quiz-set-contract": ["src/shared/contracts/quiz-sets-contract/src"],
      "@app/messages-contract": ["src/shared/contracts/messages-contract/src"],
      "@app/settings-menu": ["src/shared/features/settings-menu/src"],
      "@app/countdown-timer": ["src/shared/features/countdown-timer/src"],
      "@app/context/client": ["src/shared/context/index.client.ts"],
      "@app/context/server": ["src/shared/context/index.server.ts"],
      "@app/utils": ["src/shared/utils"],
      "@app/lib/client": ["src/shared/lib/src/index.client.ts"],
      "@app/lib/server": ["src/shared/lib/src/index.server.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "next.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ],
  "references": [
    {
      "path": "src/shared/components/dark-mode-button/tsconfig.next.json"
    },
    {
      "path": "src/shared/components/default-button/tsconfig.next.json"
    },
    {
      "path": "src/shared/components/page-component/tsconfig.next.json"
    },
    {
      "path": "src/shared/contracts/quiz-sets-contract/tsconfig.next.json"
    },
    {
      "path": "src/shared/contracts/messages-contract/tsconfig.next.json"
    },
    {
      "path": "src/shared/features/settings-menu/tsconfig.next.json"
    },
    {
      "path": "src/shared/features/countdown-timer/tsconfig.next.json"
    },
    {
      "path": "src/shared/context/tsconfig.next.json"
    },
    {
      "path": "src/shared/utils/tsconfig.next.json"
    }
  ]
}
