{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@app/dark-mode-button": ["src/shared/components/dark-mode-button/src"],
      "@app/default-button": ["src/shared/components/default-button/src"],
